<body>
    <h1>¡Feliz Cumpleaños uwu!</h1>
    <img src="imagenes.img/ddc89cae-e7cb-4c65-9186-3c9cb16ef858 (1).png" alt="Torta de cumpleaños" class="cake-image" onclick="agrandarImagen(this)">
    <p id="message">¡Que tengas un día maravilloso lleno de alegría y felicidad!</p>
    <button onclick="cambiarMensaje()">Cambiar mensaje</button>

    <script>
        function crearGlobo() {
            const globo = document.createElement('div');
            globo.className = 'balloon';
            globo.style.left = Math.random() * window.innerWidth + 'px';
            globo.style.top = window.innerHeight + 'px';
            globo.style.backgroundColor = `hsl(${Math.random()*360}, 100%, 50%)`;
            document.body.appendChild(globo);

            setTimeout(() => {
                globo.remove();
            }, 5000);
        }

        function crearConfeti() {
            const confeti = document.createElement('div');
            confeti.className = 'confetti';
            confeti.style.left = Math.random() * window.innerWidth + 'px';
            confeti.style.backgroundColor = `hsl(${Math.random()*360}, 100%, 50%)`;
            document.body.appendChild(confeti);

            setTimeout(() => {
                confeti.remove();
            }, 5000);
        }

        setInterval(crearGlobo, 300);
        setInterval(crearConfeti, 100);

        function cambiarMensaje() {
            const mensajes = [
                "¡Que todos tus sueños se hagan realidad!",
                "Disfruta tu día especial al máximo",
                "Otro año más sabio y más increíble",
                "¡Que la alegría te acompañe siempre!",
                "Celebra como si no hubiera mañana",
                "YA ESTAS VIEJOOOOOOO",
                "Feliz 22"
            ];
            const mensaje = mensajes[Math.floor(Math.random() * mensajes.length)];
            document.getElementById('message').textContent = mensaje;
        }

        function agrandarImagen(imagen) {
            imagen.style.transform = 'scale(1.5)';
            setTimeout(() => {
                imagen.style.transform = 'scale(1)';
            }, 300);
        }
    </script>
</body>
